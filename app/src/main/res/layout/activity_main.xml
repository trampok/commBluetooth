<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="387dp"
            tools:layout_editor_absoluteX="30dp" android:id="@+id/calendarView"/>
    <com.google.android.gms.maps.MapView
            android:layout_width="274dp"
            android:layout_height="86dp" tools:layout_editor_absoluteY="287dp"
            android:id="@+id/mapView" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <SeekBar
            android:layout_width="271dp"
            android:layout_height="132dp" tools:layout_editor_absoluteY="133dp"
            android:id="@+id/seekBar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>