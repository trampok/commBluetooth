<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <CalendarView
            android:layout_width="355dp"
            android:layout_height="259dp"
            android:id="@+id/calendarView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="#00741F77" android:backgroundTint="#00AD08AA" android:soundEffectsEnabled="true"
            android:foreground="@drawable/common_full_open_on_phone"
            android:focusedMonthDateColor="#00703434"
            android:focusableInTouchMode="true"
            android:scrollbarThumbHorizontal="@drawable/ic_launcher_background" android:backgroundTintMode="add"/>
    <SeekBar
            android:layout_width="271dp"
            android:layout_height="132dp"
            android:id="@+id/seekBar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="168dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.435"
            android:progressTint="#00B61616" style="@android:style/Widget.Material.SeekBar"
            app:tickMark="@drawable/googleg_standard_color_18" android:thumb="@mipmap/ic_launcher_round"/>
    <WebView
            android:layout_width="236dp"
            android:layout_height="114dp" tools:layout_editor_absoluteY="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="357dp" android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="@+id/calendarView" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>